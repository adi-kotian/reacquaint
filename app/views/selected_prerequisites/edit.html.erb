<%= link_to tender_path(@selected_prerequisite.tender), class: "btn btn-primary m-3" do %>
  <i class="fa-solid fa-arrow-left"></i>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-5 vh-100">
      <%= simple_form_for(@selected_prerequisite) do |f| %>
        <%= f.rich_text_area :description %>
        <%= f.input :approved %>
        <%= f.submit 'Submit', class: 'btn btn-success mt-2' %>
      <% end %></div>
    <div class="col-7">
      <div class="row d-flex flex-column">
        <div class="col p-3">
          <div>
            <h3>Analysis of Description</h3>
          </div>
          <div>
            <%= @selected_prerequisite.analysis %>
          </div>
        </div>
        <div class="col p-3">
          <div>
            <h3>Suggested Rewrite</h3>
          </div>
          <div>
            <%= @selected_prerequisite.suggested_rewrite %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
