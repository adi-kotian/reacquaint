<%= turbo_frame_tag :edit_prereq do %>
<h3 class="mt-3 ms-3"><%= @selected_prerequisite.prerequisite.name.titleize %></h3>
<div class="d-flex justify-content-end mt-0">
  <ul class="nav tabs-underlined" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <span class="nav-link tab-underlined active" id="editor-tab" data-bs-toggle="tab" data-bs-target="#editor-tab-pane" role="tab" aria-controls="editor-tab-pane" aria-selected="true">Spec</span>
    </li>
    <li class="nav-item" role="presentation">
      <span class="nav-link tab-underlined" id="analysis-tab" data-bs-toggle="tab" data-bs-target="#analysis-tab-pane" role="tab" aria-controls="analysis-tab-pane" aria-selected="false">Analysis</span>
    </li>
    <li class="nav-item" role="presentation">
      <span class="nav-link tab-underlined" id="team-tab" data-bs-toggle="tab" data-bs-target="#team-tab-pane" role="tab" aria-controls="team-tab-pane" aria-selected="false">Team</span>
    </li>
    <li class="nav-item" role="presentation">
      <span class="nav-link tab-underlined" id="response-tab" data-bs-toggle="tab" data-bs-target="#response-tab-pane" role="tab" aria-controls="response-tab-pane" aria-selected="false">Response</span>
    </li>
  </ul>
  </div>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="editor-tab-pane" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
      <%= render "selected_prerequisites/edit_frame", selected_prerequisite: @selected_prerequisite %>
    </div>
    <div class="tab-pane fade" id="analysis-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">
      <%= render "selected_prerequisites/analysis_section", selected_prerequisite: @selected_prerequisite %>
    </div>
      <%= render "selected_prerequisites/team", selected_prerequisite: @selected_prerequisite %>
      <%= render "compatible_responses/show", compatible_response: @selected_prerequisite.tender.user.compatible_responses.find_by(selected_prerequisite: @selected_prerequisite) %>
  </div>
<% end %>
