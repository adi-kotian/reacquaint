<div class="container">
  <div class="cards my-3">
    <% @tenders.each do |tender| %>
      <div class="card-pick">
        <div class="d-flex mt-2 ms-2">
          <% if tender.published == true %>
          <p class="m-0 btn btn-success rounded-pill">Published</p>
          <% else %>
          <p class="m-0 btn btn-warning rounded-pill">Unpublished</p>
          <% end %>
        </div>


      <div class="card-pick-info">
        <%= link_to tender_path(tender), class: "text-decoration-none" do %>
        <p class= "text-black", style= "text-decoration: none" >Project: <%= tender.title %></p>
        <p class= "text-black", style= "text-decoration: none"><%= tender.synopsis %></p>
        <% end %>
      </div>

      </div>
    <% end %>
  </div>
</div>
