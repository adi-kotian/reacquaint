<% if @tender.published %>
  <% if current_user.owner %>
    <%= link_to owner_tenders_path, class: 'btn btn-primary m-3' do %>
      <i class="fa-solid fa-arrow-left"></i>
    <% end %>
  <% else %>
    <%= link_to tenders_path, class: 'btn btn-primary m-3' do %>
      <i class="fa-solid fa-arrow-left"></i>
    <% end %>
  <% end %>
  <%= render "published" %>
  <div class="d-flex justify-content-around mb-3">
    <div>
      <% if @tender.users.include?(current_user) %>
        <%= link_to "Compatibility Report", submission_path(current_user.submissions.find_by(tender: @tender)) %>
      <% else %>
        <%= simple_form_for [@tender, @submission] do |f| %>
          <%= f.submit 'Compatibility', class: 'btn btn-success mt-2' %>
        <% end %>
      <% end %>
    </div>
    <div>
      <%= link_to "Query API", @tender,  class: 'btn btn-outline-primary' %>
    </div>
    <div>
      <%= link_to "Download PDF", @tender,  class: 'btn btn-primary' %>
    </div>
  </div>
<% else %>
  <%= link_to owner_tenders_path, class: 'btn btn-primary m-3' do %>
    <i class="fa-solid fa-arrow-left"></i>
  <% end %>
  <%= render "published" %>
  <div class="d-flex justify-content-around align-items-center">
    <div>
      <%= render 'form' %>
    </div>
    <div> <%= link_to "Save Draft", @tender, class: 'btn btn-secondary' %></div>
  </div>
<% end %>
