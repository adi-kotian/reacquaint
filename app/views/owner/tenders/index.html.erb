<div class="container">
  <div class="my-3">
    <%= form_with url: owner_tenders_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type a keyword"
        %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>
  <% if params[:query].present? %>
    <% @tenders.reverse.each do |tender| %>
      <div class="card-pick">
        <%= render 'tenders/card', tender: tender%>
      </div>
    <% end %>
  <% else %>
    <ul class="nav tabs-underlined" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <span class="nav-link tab-underlined active" id="draft-tab" data-bs-toggle="tab" data-bs-target="#draft-tab-pane" role="tab" aria-controls="draft-tab-pane" aria-selected="true">Draft</span>
      </li>
      <li class="nav-item" role="presentation">
        <span class="nav-link tab-underlined" id="published-tab" data-bs-toggle="tab" data-bs-target="#published-tab-pane" role="tab" aria-controls="published-tab-pane" aria-selected="false">Published</span>
      </li>
      <li class="nav-item" role="presentation">
        <span class="nav-link tab-underlined" id="conversations-tab" data-bs-toggle="tab" data-bs-target="#conversations-tab-pane" role="tab" aria-controls="conversations-tab-pane" aria-selected="false">Closed</span>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade py-3 show active" id="draft-tab-pane" role="tabpanel" aria-labelledby="draft-tab" tabindex="0">
        <div class="cards">
          <%= link_to new_tender_path, class: 'text-decoration-none' do %>
            <div class="card-pick bg-secondary-subtle">
              <h5 class="text-center vertical-center fw-semibold">+ Create New Tender</h5>
            </div>
          <% end %>
          <% @tenders.where(published: false).reverse.each do |tender| %>
            <div class="card-pick">
              <%= render 'tenders/card', tender: tender%>
            </div>
          <% end %>
        </div>
      </div>
      <div class="tab-pane fade py-3" id="published-tab-pane" role="tabpanel" aria-labelledby="published-tab" tabindex="0">
        <div class="cards">
          <% @tenders.where(published: true).reverse.each do |tender| %>
            <div class="card-pick">
              <%= render 'tenders/card', tender: tender %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="tab-pane fade py-3" id="conversations-tab-pane" role="tabpanel" aria-labelledby="conversations-tab" tabindex="0">
        <div class="cards">
        </div>
      </div>
    </div>
  <% end %>
</div>
